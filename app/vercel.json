{
  "version": 2,
  "builds": [
    { "src": "main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "main.py" }
  ],
  "functions": {
    "api": {
      "runtime": "vercel-python@0.8.0",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": ["main.py", "requirements.txt"],
      "environment": {
        "PYTHONUSERBASE": "./.python"
      }
    }
  },
  "env": {
    "PYTHONUSERBASE": "./.python"
  }
}
